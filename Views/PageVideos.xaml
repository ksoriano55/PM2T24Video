<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="PM2T24Video.Views.PageVideos"
             Title="Videos">
    <StackLayout Padding="20">
        <toolkit:MediaElement x:Name="VideoPlayer" WidthRequest="300" HeightRequest="500" />
        <Button Text="Tomar Video" Clicked="Button_Clicked" Margin="5, 10, 5, 5" WidthRequest="300"/>
        <Picker x:Name="VideosPicker" Title="Selecciona un video" SelectedIndexChanged="videosSelects_SelectedIndexChanged" WidthRequest="300" Margin="5,5,5,5">
            <Picker.ItemDisplayBinding>
                <Binding Path="nombre" />
            </Picker.ItemDisplayBinding>
        </Picker>
    </StackLayout>
</ContentPage>